      - name: Enviar notificaci贸n a ntfy.sh
        run: |
          BRANCH=${GITHUB_REF#refs/heads/}
          curl -s -S -X POST -H "Content-Type: text/plain" \
            --data "Se subi贸 nuevo c贸digo en $GITHUB_REPOSITORY (branch: $BRANCH). Commit: $GITHUB_SHA. Actor: $GITHUB_ACTOR." \
            https://ntfy.sh/devops-itla

